{
    "name": "stic/termii-php",
    "type": "library",
    "description": "To power customer messaging for the next generation of African technology businesses",
    "keywords": ["php","termii"],
    "homepage": "https://sticnegocios.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Joao Nzango",
            "email": "joaonzango@gmail.com",
            "homepage": "http://joaonzangoii.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "doetech/diedump": "^1.2",
        "guzzlehttp/guzzle": "~6.0|~7.0"
    },
    "require-dev": {
        "composer/composer": "^1.10",
        "orchestra/testbench": "~3.1",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "stic\\TermiiPHP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stic\\TermiiPHP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
